<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ListView?>
<VBox fx:controller="ru.geekbrains.home.chat.client.Controller"
      xmlns:fx="http://javafx.com/fxml" alignment="center">
    <HBox fx:id="authPanel">
        <TextField promptText="Введите имя пользователя" fx:id="userNameField" HBox.hgrow="ALWAYS"  onAction="#tryToAuth" >
        </TextField>
        <TextField promptText="Введите пароль" fx:id="userPassField" HBox.hgrow="ALWAYS"  onAction="#tryToAuth" >
        </TextField>
        <Button HBox.hgrow="ALWAYS" maxWidth="-Infinity" onAction="#tryToAuth">
            Connect
        </Button>
    </HBox>
    <HBox VBox.vgrow="ALWAYS">
        <TextArea  fx:id="mainTextArea"  editable="false" HBox.hgrow="ALWAYS" wrapText="true">
        </TextArea>
        <ListView onMouseClicked="#clientsListDoubleClick" fx:id="clientsListView" visible="false" managed="false" minWidth="180" maxWidth="180">
        </ListView>
    </HBox>
    <HBox fx:id="msgPanel" visible="false" managed="false" >
        <TextField  alignment="CENTER" fx:id="mainName" editable="false" >
        </TextField>
        <TextField HBox.hgrow="ALWAYS" fx:id="mainTextField" onAction="#clickMeBtnAction" promptText="Введите сообщение">
        </TextField>
        <Button HBox.hgrow="ALWAYS" maxWidth="-Infinity" onAction="#clickMeBtnAction">
            Send
        </Button>
    </HBox>
</VBox>